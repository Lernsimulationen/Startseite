<!-- 
  SCRIPT BLOCK 
  Nonce Attribut ist Pflicht aufgrund der CSP-Regel.
-->
<script nonce="hiobSicherheit123">
    /**
     * KONFIGURATION & DATENSCHUTZ
     * 'session' = Daten werden gel√∂scht, wenn Browser geschlossen wird (Empfohlen f√ºr Schulen)
     * 'local' = Daten bleiben dauerhaft (Nur f√ºr private Ger√§te)
     */
    const CONFIG = {
        STORAGE_MODE: 'session', 
        STORAGE_KEY: 'hiob_app_data_v1',
        DEBOUNCE_MS: 500
    };

    // --- STATIC DATA ---
    const TEXTS = {
        hi3: `(20) Warum gibt er dem M√ºhseligen Licht und Leben den verbitterten Herzen,\n(21) die auf den Tod warten, und er kommt nicht...\n(23) Dem Mann, dessen Weg verborgen ist und den Gott ringsum eingeschlossen hat?`,
        hi9: `(11) Siehe, er geht an mir vor√ºber, und ich sehe ihn nicht...\n(17) Er, der mich im Sturm zermalmt und meine Wunden ohne Grund mehrt.`,
        hi16: `(9) Sein Zorn hat mich zerrissen und befeindet...\n(12) Ich hatte Ruhe, da hat er mich zerr√ºttet; er hat mich beim Nacken ergriffen und mich zerschmettert.`,
        hi19: `(6) So erkennt doch, dass Gott mir Unrecht getan und sein Netz √ºber mir zusammengezogen hat!\n(8) Meinen Weg hat er vermauert...`
    };

    const LENSES = {
        theology: { title: "Theologisch", text: "Klage ist hier legitimes Gebet. Hiob klagt Gott bei Gott an und h√§lt so an der Beziehung fest." },
        psychology: { title: "Psychologisch", text: "Sprache schafft Distanz zum Trauma. Das Benennen des Grauens (Coping) verhindert das Verstummen." },
        ethics: { title: "Ethisch", text: "Solidarit√§t bedeutet, das Leid auszuhalten, statt es vorschnell zu erkl√§ren (wie die Freunde Hiobs)." }
    };

    const TASKS = {
        A: "Aufgabe: Schreibe eine 'Klage in 6 Zeilen' (Adressat, Klage, Bild, Forderung). Keine privaten Details!",
        B: "Aufgabe: Formuliere eine Antwort eines Freundes. Was ist hilfreich, was √ºbergriffig?",
        C: "Aufgabe: Entwickle 3 Regeln f√ºr 'gute Begleitung' bei Leid."
    };

    // --- APP STATE ---
    let appState = {
        mood: '',
        textSelection: 'hi3',
        inputs: {} 
    };

    // --- CORE FUNCTIONS ---

    // 1. Storage Abstraction (Robustness)
    const StorageService = {
        getProvider() {
            try {
                return CONFIG.STORAGE_MODE === 'session' ? sessionStorage : localStorage;
            } catch(e) {
                console.warn("Storage access denied/failed", e);
                return null; // Fallback f√ºr extrem restriktive Browser-Settings
            }
        },
        save(data) {
            const provider = this.getProvider();
            if(!provider) return;

            try {
                provider.setItem(CONFIG.STORAGE_KEY, JSON.stringify(data));
                ui.showStatus('Gespeichert', 'success');
            } catch (e) {
                console.error("Storage Error:", e);
                if (e.name === 'QuotaExceededError') {
                    ui.showStatus('Speicher voll!', 'error');
                } else {
                    ui.showStatus('Fehler beim Speichern', 'error');
                }
            }
        },
        load() {
            const provider = this.getProvider();
            if(!provider) return null;

            try {
                const raw = provider.getItem(CONFIG.STORAGE_KEY);
                if (!raw) return null;

                const parsed = JSON.parse(raw);
                
                // Defensive Pr√ºfung: Ist das Geladene wirklich ein Objekt?
                if (parsed && typeof parsed === 'object') {
                    // Sicherstellen, dass 'inputs' existiert
                    if (!parsed.inputs || typeof parsed.inputs !== 'object') {
                        parsed.inputs = {};
                    }
                    return parsed;
                }
                return null; // Daten korrupt oder falsches Format -> Neu starten
            } catch (e) {
                console.error("Corrupt Data ignored", e);
                return null;
            }
        },
        clear() {
            const provider = this.getProvider();
            if(provider) provider.removeItem(CONFIG.STORAGE_KEY);
        }
    };

    // 2. Debounce
    function debounce(func, wait) {
        let timeout;
        return function(...args) {
            const context = this;
            clearTimeout(timeout);
            timeout = setTimeout(() => func.apply(context, args), wait);
        };
    }

    // 3. UI Helper
    const ui = {
        showStatus(msg, type) {
            const el = document.getElementById('status-bar');
            el.textContent = msg;
            el.className = type === 'success' ? 'status-saved' : 'status-error';
            el.style.opacity = '1';
            setTimeout(() => { el.style.opacity = '0'; }, 2000);
        },
        switchPhase(targetId) {
            document.querySelectorAll('.phase-content').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.nav-btn').forEach(el => el.classList.remove('active'));
            
            const targetEl = document.getElementById(targetId);
            if(targetEl) targetEl.classList.add('active');
            
            const btn = document.querySelector(`.nav-btn[data-target="${targetId}"]`);
            if(btn) btn.classList.add('active');

            if(targetId === 'phaseC') updateMatrix();
        }
    };

    // --- LOGIC ---

    function init() {
        const saved = StorageService.load();
        if (saved) {
            appState = saved;
            restoreInputs();
        }
        
        loadTextContent();
        updateTaskDisplay();
        attachEventListeners();
    }

    function attachEventListeners() {
        // Navigation
        document.getElementById('main-nav').addEventListener('click', (e) => {
            if (e.target.classList.contains('nav-btn')) {
                ui.switchPhase(e.target.dataset.target);
            }
        });

        // Mood Selector
        document.getElementById('mood-container').addEventListener('click', (e) => {
            const btn = e.target.closest('.mood-btn');
            if (btn) {
                document.querySelectorAll('.mood-btn').forEach(b => b.classList.remove('selected'));
                btn.classList.add('selected');
                appState.mood = btn.dataset.mood;
                debouncedSave();
            }
        });

        // Text Select
        document.getElementById('textSelect').addEventListener('change', (e) => {
            appState.textSelection = e.target.value;
            loadTextContent();
            debouncedSave();
        });

        // Level Select
        document.getElementById('levelSelect').addEventListener('change', updateTaskDisplay);

        // Lens Buttons (REFACTORED for Safety: No innerHTML)
        document.getElementById('lens-nav').addEventListener('click', (e) => {
            if(e.target.dataset.lens) {
                const lens = LENSES[e.target.dataset.lens];
                const display = document.getElementById('lens-content-area');
                
                // Clear content safely
                display.textContent = ''; 
                
                // Create DOM Elements safely
                const h3 = document.createElement('h3');
                h3.textContent = lens.title;
                
                const p = document.createElement('p');
                p.textContent = lens.text;
                
                display.appendChild(h3);
                display.appendChild(p);
            }
        });

        // Inputs
        const inputs = document.querySelectorAll('input[data-key], textarea[data-key]');
        inputs.forEach(input => {
            input.addEventListener('input', (e) => {
                appState.inputs[e.target.dataset.key] = e.target.value;
                debouncedSave();
            });
        });

        // Buttons
        document.getElementById('btn-reset').addEventListener('click', () => {
            if(confirm('Wirklich alles l√∂schen?')) {
                StorageService.clear();
                location.reload();
            }
        });
        
        document.getElementById('btn-toggle-help').addEventListener('click', () => {
            document.getElementById('helpBox').classList.toggle('hidden');
        });

        document.getElementById('btn-print').addEventListener('click', () => window.print());
        document.getElementById('btn-download').addEventListener('click', downloadData);
    }

    // --- BUSINESS LOGIC ---

    const debouncedSave = debounce(() => {
        StorageService.save(appState);
    }, CONFIG.DEBOUNCE_MS);

    function loadTextContent() {
        const textKey = appState.textSelection || 'hi3';
        document.getElementById('textSelect').value = textKey;
        document.getElementById('biblicalTextDisplay').textContent = TEXTS[textKey] || '';
    }

    function updateTaskDisplay() {
        const val = document.getElementById('levelSelect').value;
        document.getElementById('taskDisplay').textContent = TASKS[val];
    }

    function updateMatrix() {
        const selText = document.getElementById('textSelect');
        const textName = selText.options[selText.selectedIndex].text;
        
        setTextSafe('outTextstelle', textName);
        setTextSafe('outContent', appState.inputs['phaseB_content'] || '...');
        setTextSafe('outMetaphor', appState.inputs['phaseB_metaphor'] || '...');
        setTextSafe('outDemand', appState.inputs['phaseB_demand'] || '...');
    }

    function setTextSafe(id, text) {
        document.getElementById(id).textContent = text;
    }

    function restoreInputs() {
        if (appState.mood) {
            const btn = document.querySelector(`.mood-btn[data-mood="${appState.mood}"]`);
            if (btn) btn.classList.add('selected');
        }
        for (const [key, val] of Object.entries(appState.inputs)) {
            const el = document.querySelector(`[data-key="${key}"]`);
            if (el) el.value = val;
        }
    }

    function downloadData() {
        const date = new Date().toLocaleDateString('de-DE');
        let txt = `HIOB ARBEITSBLATT - ${date}\n============================\n\n`;
        
        const getVal = (k) => appState.inputs[k] || '-';

        txt += `1. EINSTIEG\nStimmung: ${appState.mood}\nAssoziation: ${getVal('phaseA_assoc')}\n\n`;
        txt += `2. TEXTARBEIT (${appState.textSelection})\nInhalt: ${getVal('phaseB_content')}\n`;
        txt += `Begriffe: ${getVal('phaseB_keywords')}\nBild: ${getVal('phaseB_metaphor')}\nForderung: ${getVal('phaseB_demand')}\n\n`;
        txt += `4. DEUTUNG\nMeinung: ${getVal('phaseD_deutung')}\n\n`;
        txt += `5. TRANSFER\n${getVal('phaseE_transfer')}\n\n`;
        txt += `6. ABSCHLUSS\nSatz: ${getVal('phaseF_satz')}\nFrage: ${getVal('phaseF_frage')}\nNo-Go: ${getVal('phaseF_nogo')}\n`;

        // UTF-8 BOM hinzuf√ºgen (\uFEFF) damit Windows/Excel Umlaute erkennt
        const blob = new Blob(['\uFEFF' + txt], { type: 'text/plain;charset=utf-8' });
        const url = window.URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = 'Hiob_Mappe.txt';
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        window.URL.revokeObjectURL(url);
    }

    // Start App
    document.addEventListener('DOMContentLoaded', init);

</script>
</body>
</html>
